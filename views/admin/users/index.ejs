<%- include('../../partials/header') %>

<body>
    <%- include('../../partials/navbar') %>
    <div class="container">
        <hr>
        <h2>Users</h2>
        <a href="/admin/users/create" class="btn btn-success">Register User</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <th><%= user.id %></th>
                        <th><%= user.email %></th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

<%- include('../../partials/footer') %>